@model PersonalTrainer.Models.Workout

<h2>So... Let's just clarify those details</h2>

@using (Html.BeginForm())
{
    <div class="left">@Html.LabelFor(x => x.FName) @Html.DisplayFor(x => x.FName)</div>
    
    <div class="right">@Html.LabelFor(x => x.LName) @Html.DisplayFor(x => x.LName)</div>
    <div class="clear-fix"></div>
    <br/>
    
    <div class="left">@Html.LabelFor(x => x.Gender) @Html.DisplayFor(x => x.Gender)</div>
    <div class="clear-fix"></div>
    <br />

    <div class="left">@Html.LabelFor(x => x.DateOfBirth) @Html.DisplayFor(x => x.DateOfBirth)</div>

    <div class="right">@Html.LabelFor(x => x.Age) @Html.DisplayFor(x => x.Age)</div><br />
    <div class="clear-fix"></div>
    <br />

    <div class="left">@Html.LabelFor(x => x.Email) @Html.DisplayFor(x => x.Email)</div><br />

    <div class="right">@Html.LabelFor(x => x.Phone) @Html.DisplayFor(x => x.Phone)</div><br />
    <div class="clear-fix"></div>
    <br />

    <div class="left">@Html.LabelFor(x => x.Height) @Html.DisplayFor(x => x.Height)</div><br />

    <div class="right">@Html.LabelFor(x => x.Weight) @Html.DisplayFor(x => x.Weight)</div><br />
    <div class="clear-fix"></div>
    <br />

    <div class="left">@Html.LabelFor(x => x.BodyMass) @Html.DisplayFor(x => x.BodyMass)</div><br />

    <div class="right">@Html.LabelFor(x => x.Goal) @Html.DisplayFor(x => x.Goal)</div><br />
    <div class="clear-fix"></div>
    <br />

    <div class="left">@Html.LabelFor(x => x.AddInfo) @Html.DisplayFor(x => x.AddInfo)</div><br />
    <div class="clear-fix"></div>
    <br />

    <div class="right"><input type="submit" value="Time for a fitness test!" /></div>
}
