@model PersonalTrainer.Models.RegisterModel

<head>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="container">
            <form role="form">
                <div class="form-group">
                    <label for="FullName">Full Name</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="@Html.LabelFor(m => m.Password)">@Html.LabelFor(m => m.Password)</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    <label for="@Html.LabelFor(m => m.ConfirmPassword)">@Html.LabelFor(m => m.ConfirmPassword)</label>
                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password" })
                </div>
                <div class="form-group">
                    <label for="@Html.LabelFor(m => m.TrainerName)">@Html.LabelFor(m => m.TrainerName)</label>
                    @Html.TextBoxFor(x => x.TrainerName, new { @class = "form-control" })
                </div>
                
                <button type="submit" class="btn btn-default">Submit</button>
                
            </form>
        </div>
    }
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
