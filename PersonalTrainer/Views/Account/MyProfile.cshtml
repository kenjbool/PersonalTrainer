@using PersonalTrainer.Models
@model PersonalTrainer.Models.LoginModel

<head>
    @{var client = new Client();

    }
</head>
<h3>My Profile</h3>

@using (Html.BeginForm("MyProfile", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="container">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            @Html.DisplayFor(x => x.FullName, new {@class = "form-control disabled", @id = "Name", @type = "text"})
            <label for="Password">Password</label>
            @Html.DisplayFor(x => x.Password, new {@class = "form-control disabled", id = "password", @type = "password"})
        </div>
        <div class="form-group col-md-6">
            <label for="RegistrationDate">Date Registered</label>
            @Html.Display(client.RegistrationDate.ToShortDateString(), new {@class = "form-control disabled", @id = "RegistrationDate", type = "date"});
        </div>

        @if (client != null)
        {
            <div class="container well">
                <div class="form-group disabled">
                </div>
            </div>
        }
    </div>


    <input type="submit" value="Change password"/>
}
