@using PersonalTrainer.Controllers
@using PersonalTrainer.Models
@model PersonalTrainer.Models.MacroCounter
@ViewBag.Title = "MacroCounter";

@{var controller = new FoodController();}


<h2>MacroCounter</h2>

<p>Let's calculate the Macro's</p>

@using (Html.BeginForm())
{
<div class="float-left">
    @Html.LabelFor(x => x.Weight) @Html.TextBoxFor(x => x.Weight)

    @Html.LabelFor(x => x.Height) @Html.TextBoxFor(x => x.Height)

    @Html.LabelFor(x => x.Age) @Html.TextBoxFor(x => x.Age)

    @Html.LabelFor(x => x.Gender) @Html.DropDownListFor(x => x.Gender, new[]
                                  {
                                      new SelectListItem() {Text = "Male", Value = bool.TrueString},
                                      new SelectListItem() {Text = "Female", Value = bool.FalseString}
                                  }, "Choose an option")

    @Html.LabelFor(x => x.ActivityName) @Html.DropDownListFor(x => x.ActivityName, new[]
                                        {
                                            new SelectListItem() {Text = "Sedentary (Little or no exercise, desk job)", Value = "Sedentary"},
                                            new SelectListItem() {Text = "Lightly Active (light exercise/sports 1-3 days/week)", Value = "Lightly"},
                                            new SelectListItem() {Text = "Moderately Active (moderate exercise/sports 3-5 days/week)", Value = "Moderately"},
                                            new SelectListItem() {Text = "Very Active (Hard exercise/sports 6-7 days per/week)", Value = "Very"},
                                            new SelectListItem() {Text = "Extremely Active (Very hard daily exercise/sports & physical job or twice a day training)", Value = "Extremely"}
                                        }, "Choose an option")
</div>
<input type="submit" value="Get your answers"/>
}